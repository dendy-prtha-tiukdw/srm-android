<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="id.ukdw.srmmobile.ui.pengumumankelas.DetailKelasPengumumanActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="detailKelasPengumumanViewModel"
            type="id.ukdw.srmmobile.ui.pengumumankelas.DetailKelasPengumumanViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2D2D2D"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="20dp"
            android:visibility="invisible"
            android:src="@drawable/fab_add">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPengumumanKelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtPengumumanKelasEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak ada Pengumuman Kelas"
            android:textColor="@color/colorWhite"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtEventConnectTimeOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="koneksi internet terputus"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/txtEventConnectTimeOut1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mohon cek koneksi internet anda"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/txtErrorServerRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mohon maaf fitur sedang di perbaiki"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/reconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coba Lagi"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"/>



    </FrameLayout>
</layout>