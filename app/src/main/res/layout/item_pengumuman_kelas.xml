<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPengumumanKelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/itemImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D6811A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tanggalPengumumanDetailKelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:layout_gravity="left"
                    android:textColor="@color/colorWhite"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/groupPengumumanDetailKelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/judul_kelas"
                    android:textColor="@color/colorWhite"
                    android:paddingBottom="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/detailPengumumanDetailKelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Matakuliah"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/NamaDosenPengumumanDetailKelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Dosen"
                    android:layout_gravity="right"
                    android:textColor="@color/colorWhite"
                    android:paddingTop="15dp"
                    android:paddingRight="20dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>