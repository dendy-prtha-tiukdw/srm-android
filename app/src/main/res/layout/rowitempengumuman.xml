<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="30dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:id="@+id/cardPengumuman"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itemImg"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#000"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="-250dp"
                android:background="@drawable/border_recyclerview"/>

        </LinearLayout>

        <TextView
            android:id="@+id/judulPengumuman"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Tugas Adsis Minggu 11"
            android:textSize="30dp"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/tanggalPengumuman"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="12 September 2020"
            android:textSize="15sp"
            android:paddingTop="110dp"
            android:paddingLeft="30dp"
            android:textColor="#FFF"/>

        <ImageView
            android:id="@+id/detailPengumuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nextwhite"
            android:layout_gravity="right"
            android:paddingRight="30dp"
            android:paddingTop="110dp"/>

        <ImageView
            android:id="@+id/deletePengumuman"
            android:layout_width="65dp"
            android:layout_height="96dp"
            android:layout_gravity="right"
            android:paddingTop="30dp"
            android:paddingRight="28dp"
            android:src="@drawable/ic_delete" />

    </androidx.cardview.widget.CardView>

</LinearLayout>